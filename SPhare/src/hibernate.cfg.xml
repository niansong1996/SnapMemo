<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
                                         "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
 <session-factory>
  <property name="hbm2ddl.auto">create</property>
  <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
  <property name="hibernate.connection.password">9990</property>
  <property name="hibernate.connection.url">jdbc:mysql://127.0.0.1:3306/sphare</property>
  <property name="hibernate.connection.username">root</property>
  <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
  <mapping resource="common/FreeTimePO.hbm.xml"/>
  <mapping resource="common/GroupPO.hbm.xml"/>
  <mapping resource="common/UserPO.hbm.xml"/>
  <mapping resource="common/TimeOccupancyPO.hbm.xml"/>
 </session-factory>
</hibernate-configuration>
